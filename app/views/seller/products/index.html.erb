<div class="products-header">
  <h1>Мої товари</h1>
  <%= link_to "Додати товар", new_seller_product_path, class: "btn-primary" %>
</div>

<% if @products.any? %>
  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= link_to seller_product_path(product), class: "product-image-link" do %>
          <% if product.photos.attached? %>
            <div class="product-image">
              <%= image_tag product.photos.first, alt: product.short_description %>
            </div>
          <% else %>
            <div class="product-image placeholder">
              <span>Без фото</span>
            </div>
          <% end %>
        <% end %>
        
        <div class="product-info">
          <%= link_to seller_product_path(product), class: "product-title-link" do %>
            <h3><%= truncate(product.short_description, length: 50) %></h3>
          <% end %>
          <p class="product-price"><%= number_to_currency(product.price, unit: "₴", separator: ",", delimiter: " ") %></p>
          <p class="product-category">Категорія: <%= product.category %></p>
          
          <div class="product-actions">
            <%= link_to "Редагувати", edit_seller_product_path(product), class: "btn-secondary" %>
            <%= button_to "Видалити", seller_product_path(product), method: :delete, 
                          class: "btn-danger", 
                          form: { class: "delete-form-inline", data: { turbo_confirm: "Ви впевнені?" } } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <p>У вас поки немає товарів.</p>
    <%= link_to "Додати перший товар", new_seller_product_path, class: "btn-primary" %>
  </div>
<% end %>

